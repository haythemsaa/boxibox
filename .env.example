# Application
APP_NAME=Boxibox
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=boxibox
DB_USERNAME=root
DB_PASSWORD=

# Sessions
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache & Queue
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Redis (optionnel - pour cache/queue performants)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@boxibox.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_QUEUE_ENABLED=true

# Production Mail (exemples commentés)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# AWS S3 (optionnel - pour stockage cloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# SEPA Configuration
SEPA_CREDITOR_ID=
SEPA_CREDITOR_NAME="Nom de votre entreprise"
SEPA_CREDITOR_IBAN=
SEPA_CREDITOR_BIC=
SEPA_CREDITOR_ADDRESS="Adresse de votre entreprise"
SEPA_CREDITOR_CITY="Ville"
SEPA_CREDITOR_POSTAL_CODE="Code Postal"
SEPA_CREDITOR_COUNTRY="FR"

# Twilio SMS (optionnel)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
TWILIO_ENABLED=false

# Pusher WebSockets (optionnel - pour notifications temps réel)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

# Stripe Payment (optionnel)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Google Analytics (optionnel)
GOOGLE_ANALYTICS_ID=

# Sanctum API
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,127.0.0.1,127.0.0.1:8000

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_ACCESS_TERMINAL=5

# Notifications
NOTIFICATION_AUTO_DELETE_DAYS=90
NOTIFICATION_REFRESH_INTERVAL=30

# PDF Configuration
PDF_DRIVER=dompdf

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
